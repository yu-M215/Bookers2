<div class="container">
  <div class="row">
    <%= render 'books/list', book:@new_book, user:@user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg",  size: "40x40" %>
                <br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorites_path(@book), method: :delete, class:"favorite-btn" do %>
                <i class="fas fa-heart"></i><%= @book.favorites.count %>
                <% end %>
              </td>
            <% else %>
              <td>
                <%= link_to book_favorites_path(@book), method: :post do %>
                <i class="fas fa-heart"></i><%= @book.favorites.count %>
                <% end %>
              </td>
            <% end %>
            <td>
              コメント数: <%= @book.comments.count %>
            </td>
            <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger" %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <div>
        <% book.book.comments.each do |book_comment| %>
          <%= attachment_image_tag book_comment.user, :profile_image, fallback: "no_image.jpg",  size: "40x40" %>
          <br>
          <%= book_comment.user.name %>
          <%= book_comment.comment %>
          <% if book_comment.user == current_user %>
            <%= link_to "Destroy", book_book_comment_path(@book), method: :delete, class:"btn btn-sm btn-danger" %>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= form_with (model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment %>
          <%= f,submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
