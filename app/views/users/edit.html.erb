<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local: true do |f| %>
        <label for="user_name">Name</label>
        <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:@user.name, class:"form-control name" %>
        <label for="user_image">Image</label>
        <%= f.attachment_field :profile_image, id:"user_image", class:"form-control-file user_image"%>
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction, id:"user_introduction", class:"form-control introduction" %>
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>